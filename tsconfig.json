{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "paths": {
      "@ozaki/shared": [
        "packages/shared/index.ts"
      ],
      "*": ["./dist/*"] // This tells TypeScript to look in the "dist/" folder for all modules.

    },
    "skipDefaultLibCheck": true
  }
}
